<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".todos_details">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbartododetails"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white">

            <TextView
                android:id="@+id/dateTodo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="12dp"
                android:text="Tarih başlığı"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:id="@+id/gorevdetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#faf7f7"
            android:hint="Görevi buraya yazınız"
            android:padding="15dp"
            android:textColor="@color/black"
            android:textSize="17sp">

        </TextView>

        <TextView
            android:id="@+id/aciklamadetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#faf7f7"
            android:hint="Açıklamayı buraya yazınız"
            android:padding="15dp"
            android:textColor="@color/black"
            android:textSize="17sp">

        </TextView>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton

        android:id="@+id/gotoedittodo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:background="#A1F4FB"
        android:src="@drawable/ic_baseline_edit_24"
        app:maxImageSize="40dp"

        >

    </com.google.android.material.floatingactionbutton.FloatingActionButton>

</RelativeLayout>